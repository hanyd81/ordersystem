<div class="row">
    <div class="col-md-12">
        <h2 class="text-center">Update Meal</h2>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <img src="/images/uploaded/{{#if newPic}}{{newPic}}{{else}}{{meal.picture}}{{/if}}" alt="{{meal.name}}" class="rounded img-thumbnail " style="max-width: 500px; height:auto" />
    </div>
</div>
<br>
<form method="POST" , action="/meal/updatePic" enctype="multipart/form-data">
 <input type="hidden" id="mealId" name="mealId" value="{{meal.id}}">
 <input type="hidden" id="oldPic" name="oldPic" value={{#if newPic}} "{{newPic}}" {{else}} "{{meal.picture}}"{{/if}}>
  
    <div class="row ">
        <div class="col-md-4 col-md-offset-2 ">
            <label for="newPicture">Upload New Picture:</label>
            <input class="form-control" id="newPicture" name="newPicture" type="file" />
        </div>
        <div class="col-md-4 ">
            <br>
            <input type="submit" class="btn " value="Change Picture" />
        </div>
    </div>
</form>
<br>

<hr>
<div class='row'>
    <div class="col-md-12">
        <form method="post" action="/meal/update">
            <input type="hidden" id="mealId" name="mealId" value="{{meal.id}}">
            <input type="hidden" id="mealPic" name="mealPic" {{#if newPic}} value="{{newPic}}" {{else}} value="{{meal.picture}}"
                {{/if}}>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        <label for="mealName">Name</label>
                        <input class="form-control" id="mealName" name="mealName" type="text" value="{{meal.name}}" />
                    </div>
                    <div class="form-group">
                        <label for="mealPrice">Price</label>
                        <input class="form-control" id="mealPrice" name="mealPrice" type="text" value="{{meal.price}}" />
                    </div>
                </div>
            </div>
            <hr>
            <div class="form-row text-center">
            <input type="submit" class="btn btn-primary " value="Confirm Change" /><br><br><br>
       </div> 
       </form>
        <hr>
    </div>
</div>